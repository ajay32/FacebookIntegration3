<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stfalcon.socialauthhelper">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- TWITTER -->
        <activity
            android:name=".twitter.TwitterAuthActivity"
            android:screenOrientation="portrait" />

        <!-- VK -->
        <activity
            android:name=".vk.activities.VkAuthActivity"
            android:screenOrientation="portrait" />

        <!-- INSTAGRAM -->
        <activity
            android:name=".instagram.activities.InstagramAuthActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
